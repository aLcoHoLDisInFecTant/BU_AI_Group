{
  "model_type": "lstm",
  "num_classes": 2,
  "seed": 42,

  "csv_path": "../data/IMDB Dataset.csv",
  "train_val_test_split": [0.8, 0.1, 0.1],
  "sample_size": 8000,

  "batch_size": 32,
  "max_length": 200,

  "embedding_mode": "glove_frozen",
