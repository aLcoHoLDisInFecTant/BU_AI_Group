  "rnn_hidden_dim": 128,
  "rnn_num_layers": 2,
  "bidirectional": true,
  "dropout": 0.3,

  "min_freq": 2,

  "learning_rate": 0.001,
  "weight_decay": 0.0,
  "num_epochs": 3,
  "gradient_clip": 1.0
}

